= form_for @post_group do |f|
  - if @post_group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post_group.errors.count, "error")} prohibited this post_group from being saved:"
      %ul
        - @post_group.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.text_field :name, class: "form-control", required: true
  .form-groip
    = f.submit 'Сохранить', class: "btn btn-success"
    = link_to 'Отмена', post_groups_path
