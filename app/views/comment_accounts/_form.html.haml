= form_for @comment_account do |f|
  - if @comment_account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment_account.errors.count, "error")} prohibited this comment_account from being saved:"
      %ul
        - @comment_account.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :owner_id
    = f.number_field :owner_id
  .actions
    = f.submit 'Сохранить', class: "btn btn-primary"
